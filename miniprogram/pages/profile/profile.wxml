<view class="container">
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
    <view class="info">
      <text class="nickname">{{userInfo.nickName || '未登录'}}</text>
      <text class="user-id">ID: {{userInfo.userId || '---'}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item">
      <text class="menu-text">性别</text>
      <view class="gender-options">
        <radio-group bindchange="onGenderChange">
          <label class="radio-label" wx:for="{{genderOptions}}" wx:key="value">
            <radio value="{{item.value}}" checked="{{item.value === userInfo.gender}}"/>{{item.label}}
          </label>
        </radio-group>
      </view>
    </view>

    <view class="menu-item">
      <text class="menu-text">MBTI</text>
      <view class="mbti-options">
        <radio-group bindchange="onMbtiChange">
          <label class="radio-label" wx:for="{{mbtiOptions}}" wx:key="value">
            <radio value="{{item.value}}" checked="{{item.value === userInfo.mbti}}"/>{{item.label}}
          </label>
        </radio-group>
      </view>
    </view>

    <view class="menu-item" bindtap="navigateToHistory">
      <text class="menu-text">聊天记录</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateToSettings">
      <text class="menu-text">设置</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateToAbout">
      <text class="menu-text">关于</text>
      <text class="arrow">></text>
    </view>
  </view>

  <button class="logout-btn" bindtap="logout" wx:if="{{userInfo}}">退出登录</button>
</view> 