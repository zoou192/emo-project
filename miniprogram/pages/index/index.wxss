.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.content {
  margin-top: 20rpx;
}

/* 头像上传区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.upload-btn {
  font-size: 28rpx;
  color: #1296db;
  background: none;
  border: none;
  padding: 0;
  line-height: 1.5;
}

/* 输入区域通用样式 */
.input-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
}

/* 性别选择样式 */
.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

/* MBTI网格样式 */
.mbti-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.mbti-item {
  text-align: center;
  padding: 20rpx 0;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.mbti-item.selected {
  background: #1296db;
  color: #fff;
}

/* 标签容器样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  padding: 10rpx 30rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.tag.selected {
  background: #1296db;
  color: #fff;
}

/* 提交按钮样式 */
.submit-btn {
  margin-top: 60rpx;
  background: #1296db;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
} 