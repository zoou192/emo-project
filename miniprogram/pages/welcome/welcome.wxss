.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #ffffff;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.welcome-text {
  text-align: center;
  margin: 40rpx 0;
}

.title {
  display: block;
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

/* 步骤指示器样式 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
  width: 100%;
}

.step {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.step.active {
  background-color: #1296db;
  color: #ffffff;
}

.step-line {
  width: 100rpx;
  height: 4rpx;
  background-color: #f5f5f5;
  margin: 0 20rpx;
}

.step-line.active {
  background-color: #1296db;
}

/* 步骤内容样式 */
.step-content {
  width: 100%;
  padding: 20rpx 0;
}

.step-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 性别选择样式 */
.gender-options {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-top: 40rpx;
}

.gender-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  width: 200rpx;
}

.gender-option.selected {
  background-color: #e6f4fb;
  border: 2rpx solid #1296db;
}

.gender-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.gender-option text {
  font-size: 28rpx;
  color: #333333;
}

/* 表单样式 */
.form-container {
  width: 100%;
  padding: 20rpx 0;
}

.input-section {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.random-btn {
  width: auto;
  font-size: 24rpx;
  color: #1296db;
  background: none;
  border: 2rpx solid #1296db;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.random-btn::after {
  display: none;
}

/* MBTI选项样式 */
.mbti-options {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

.radio-label radio {
  margin-right: 8rpx;
  transform: scale(0.8);
}

/* 特质标签样式 */
.traits-container {
  margin-top: 20rpx;
}

.traits-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.trait-tag {
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666666;
}

.trait-tag.selected {
  background-color: #1296db;
  color: #ffffff;
}

/* 按钮组样式 */
.button-group {
  width: 100%;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  display: flex;
  gap: 20rpx;
}

.prev-btn, .next-btn, .submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.prev-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.next-btn, .submit-btn {
  background-color: #1296db;
  color: #ffffff;
}

/* 头像上传样式 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
}

.upload-btn {
  font-size: 28rpx;
  color: #1296db;
  background: none;
  border: none;
  padding: 0;
  line-height: 1.5;
}

.upload-btn::after {
  display: none;
} 